@model IdentityAuthentication.Models.ViewModel.LoginViewModel

<h1>Log In</h1>
<form asp-controller="Account" asp-action="Login">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">User Email</label>
        <input asp-for="Email" class="form-control" aria-describedby="Email">
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" aria-describedby="Password">
    </div>
    <button type="submit" class="btn btn-primary">LogIn</button>
</form>