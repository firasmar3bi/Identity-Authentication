@model IdentityAuthentication.Models.ViewModel.RegisterViewModel

<h1>Register</h1>
<form asp-controller="Account" asp-action="Register">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">User Email</label>
        <input asp-for="Email" class="form-control" aria-describedby="Email">
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" aria-describedby="Password">
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPasseord" class="form-label">ConfirmPasseord</label>
        <input asp-for="ConfirmPasseord" class="form-control" aria-describedby="ConfirmPasseord">
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" aria-describedby="Phone">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>